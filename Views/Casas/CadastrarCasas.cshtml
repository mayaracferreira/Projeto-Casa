@model CasaShow.Models.Casa

<h2>Cadastro de Casas e Clubes</h2>

<form class="form.horizontal" asp-controller="Casas" asp-action="Salvar" method="POST">
    <input type="text" class="form-control" asp-for="Nome" placeholder="Nome da Casa/Clube">
    <input type="text" class="form-control" asp-for="Endereço" placeholder="Endereço">
    

    <button class="btn btn-success">Cadastrar</button>


</form>